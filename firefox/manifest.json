{
  "manifest_version": 3,
  "name": "Webtero for Zotero and Atlos",
  "version": "0.1.3",
  "description": "Grease your web research workflow with in-line annotations and item creation.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://api.zotero.org/*",
    "https://www.zotero.org/*",
    "https://platform.atlos.org/api/v2/*"
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "type": "module"
  },
  "sidebar_action": {
    "default_panel": "sidebar/sidebar.html",
    "default_title": "Webtero",
    "default_icon": "sidebar/icon-w.svg",
    "open_at_install": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/singlefile/single-file-hooks-frames.js",
        "lib/singlefile/single-file-bootstrap.js",
        "lib/singlefile/single-file.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "webtero@pnwmatt.net",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "authenticationInfo",
          "browsingActivity",
          "websiteContent",
          "websiteActivity",
          "searchTerms"
        ]
      }
    }
  },
  "icons": {
    "32": "sidebar/icon-w.svg",
    "64": "sidebar/icon-w.svg"
  }
}